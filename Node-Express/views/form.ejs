<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
</head>
<body>
    
    <form method="post" action="/insert" style="padding-bottom: 30px;">
        <table border align="center" >
            <tr>
                <th>Id</th>
                <td><input type="number" name="id"></td>
            </tr>
             <tr>
                <th>Name</th>
                <td><input type="text" name="name"></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><input type="email" name="email"></td>
            </tr>
             <tr>
                <th>Number</th>
                <td><input type="number" name="number"></td>
            </tr>
            <tr align="center">
                <td colspan="2"><input type="submit"></td>
            </tr>

        </table>
    </form>




    <table border align="center" cellpadding="10">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Number</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>

        <% students.map((ele) => { %>
            
            <tr>
                <td><%= ele.id %></td>
                <td><%= ele.name %></td>
                <td><%= ele.email %></td>
                <td><%= ele.number %></td>
                <td><a href="/delete?id=<%=ele.id %>"><button>Delete</button></a></td>
                <td><a href="/edit?id=<%=ele.id %>"><button>Edit</button></a></td>
            </tr>

        <%  }) %>


    </table>

</body>
</html>