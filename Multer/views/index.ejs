<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>

     <form action="/insertData" method="POST" enctype="multipart/form-data" >
        <table style="width:400px" align="center"  class="table table-bordered">
            <tr>
                <th>name</th>
                <td><input name="name" type="text" ></td>
            </tr>
            <tr>
                <th>email</th>
                <td><input name="email" type="text" ></td>
            </tr>
            <tr>
                <th>phone</th>
                <td><input name="phone" type="number" ></td>
            </tr>
            <tr>
                <th>password</th>
                <td><input name="password" type="text" ></td>
            </tr>
            <tr>
                <th>Image</th>
                <td><input name="image" type="file" ></td>
            </tr>
            <tr>
                <td colspan="2">
                    <button class="btn btn-primary btn-sm">Submit</button>
                </td>
            </tr>
        
        </table>
    </form>





     <div class="container my-5">
        <table class="table">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Password</th>
                <th>Trigger</th>
            </tr>
            <%  data.map((ele)=>{ %>
                <tr>
                    <td> <img width="100px" src="<%= ele.image %>" /></td>
                    <td><%= ele.name %></td>
                    <td><%= ele.email %></td>
                    <td><%= ele.phone %></td>
                    <td><%= ele.password %></td>
                    <td>
                        <a class="btn btn-sm rounded-circle btn-outline-secondary" href="/edit?id=<%= ele.id %>"><i class="bi bi-pencil"></i></a>

                        
                        <a class="btn btn-sm rounded-circle btn-outline-secondary" href="/delete/<%= ele.id %>"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            <%    }) %>
        </table>

</body>
</html>