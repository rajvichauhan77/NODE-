<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" >
    <title>Form</title>
</head>
<body>
    
    <div class="container mt-5">
        <form action="/insertData" method="POST" class="">
          
                    <table  class=" p-5 mx-auto  " >
                    <tr>
                        <th>name</th>
                        <td><input name="name" type="text"></td>
                    </tr>
                    <tr>
                        <th>email</th>
                        <td><input name="email" type="text"></td>
                    </tr>
                    <tr>
                        <th>phone</th>
                        <td><input name="phone" type="number"></td>
                    </tr>
                    <tr>
                        <th>password</th>
                        <td><input name="password" type="text"></td>
                    </tr>
                    <tr>
                        <th >
                            <button class="mt-2">Submit</button>
                        </th>
                        
                    </tr>
                </table>
        </form>
    </div>

    <div class="container my-5">
        <table class="table">
             <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Password</th>
                <th>Delete</th>
            </tr>

            <% data.map((ele)=>{ %>

                <tr>
                    <td><%= ele.name></td>
                    <td><%= ele.email%></td>
                    <td><%= ele.phone></td>
                    <td><%= ele.password></td>
                    <td>
                        <a class="btn btn-sm rounded-circle btn-outline-secondary" href="/delete/<%= ele.id %>"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>

            <% }) %>

        </table>
    </div>

</body>
</html>